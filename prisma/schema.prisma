
generator client {
  provider = "prisma-client-js"
  //output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  username String 
  email String @unique
  password String
  products Product []
  createdAt DateTime @default(now())
  Role Roles @default(USER)
  Status Status @default(INACTIVE)
  otp Otp[]

}


model Otp {
  id String @id @default(uuid())
  otp String
  expiredOtp DateTime
  userId String
  user User @relation(fields: [userId],references: [id])
}

enum Roles {
  ADMIN
  USER
}

enum Status {
  ACTIVE
  INACTIVE
}

model Product {
  id String @id @default(uuid())
  name String
  price Float
  decription String?
  createdAt DateTime @default(now())
  userId String
  user User @relation(fields: [userId],references: [id])
}


